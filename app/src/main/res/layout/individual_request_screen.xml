<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/pet_pic"
            android:src="@drawable/cat"
            android:layout_margin="10dp"
            android:contentDescription="pet_picture">
        </ImageView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pet_pic"
            android:layout_alignRight="@id/pet_pic"
            android:layout_alignStart="@id/pet_pic"
            android:layout_alignEnd="@id/pet_pic"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pet_profile"
            android:layout_below="@id/pet_pic"
            android:layout_marginTop="10dp"
            android:background="@drawable/purple_border">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_name_line"
                android:weightSum="4">
                <TextView
                    android:text="Pet Name: "
                    style="@style/TableText" />
                <TextView
                    android:id="@+id/pet_name"
                    android:text="Shadow"
                    style="@style/TableText"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_type_line">
                <TextView
                    android:text="Pet Type: "
                    style="@style/TableText"/>
                <TextView
                    android:id="@+id/pet_type"
                    android:text="Cat"
                    style="@style/TableText"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_breed_line">
                <TextView
                    android:text="Pet Breed: "
                    style="@style/TableText"/>

                <TextView
                    android:id="@+id/pet_breed"
                    style="@style/TableText"
                    android:layout_height="match_parent"
                    android:text="Short Hair" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_description_line">
                <TextView
                    android:text="Pet Description: "
                    style="@style/TableText"/>

                <TextView
                    android:id="@+id/pet_description"
                    style="@style/TableText"
                    android:layout_weight="1"
                    android:text="loves to be pet, hates to be picked up, big time foodie" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pet_pic"
            android:layout_alignRight="@id/pet_pic"
            android:layout_alignStart="@id/pet_pic"
            android:layout_alignEnd="@id/pet_pic"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/pet_profile"
            android:id="@+id/owner_info"
            android:layout_marginTop="20dp"
            android:background="@drawable/cyan_border">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_owner_line">
                <TextView
                    android:text="Pet Owner: "
                    style="@style/TableText" />
                <TextView
                    android:id="@+id/owner_first_name"
                    android:text="Victoria Matos"
                    style="@style/TableText"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner_email_line">
                <TextView
                    android:text="Owner Email: "
                    style="@style/TableText"/>

                <TextView
                    android:id="@+id/owner_email"
                    style="@style/TableText"
                    android:layout_height="match_parent"
                    android:text="vrmatos@loyola.edu" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner_zip_code_line">
                <TextView
                    android:text="Zip Code: "
                    style="@style/TableText"/>

                <TextView
                    android:id="@+id/owner_zip_code"
                    style="@style/TableText"
                    android:layout_height="match_parent"
                    android:text="21155" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:layout_below="@id/owner_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Book Request"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@drawable/rounded_corners">
        </Button>
    </RelativeLayout>

</ScrollView>