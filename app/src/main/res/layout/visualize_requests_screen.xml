<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/booked_requests">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requests_label"
            android:background="@color/green"
            android:text="YOUR BOOKED REQUESTS"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:gravity="center"/>

        <include
            layout="@layout/browse_request_individual"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/requests_label"
            android:id="@+id/result1" />

        <include
            layout="@layout/browse_request_individual"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/result1"
            android:id="@+id/result2" />

        <include
            layout="@layout/browse_request_individual"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/result2"
            android:id="@+id/result3" />

        <include
            layout="@layout/browse_request_individual"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/result3"
            android:id="@+id/result4"/>

        <include
            layout="@layout/browse_request_individual"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/result4"
            android:id="@+id/result5" />


    </RelativeLayout>
</ScrollView>